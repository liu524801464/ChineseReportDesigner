<Window x:Class="ChineseReportDesigner.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="中国式报表设计器" Height="800" Width="1200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10">
            <StackPanel Margin="5">
                <Button Content="加载数据" Command="{Binding LoadDataCommand}" Margin="0,0,0,10"/>
                <TextBlock Text="可用字段" FontWeight="Bold" Margin="0,10,0,5"/>
                <ListBox ItemsSource="{Binding Design.AvailableFields}" 
                         DisplayMemberPath="DisplayName"
                         Height="100"/>
                <GroupBox Header="行分组" Margin="0,10,0,5">
                    <ItemsControl ItemsSource="{Binding Design.RowGroups}" 
                                  DisplayMemberPath="DisplayName"/>
                </GroupBox>
                <GroupBox Header="列字段" Margin="0,10,0,5">
                    <ItemsControl ItemsSource="{Binding Design.ColumnFields}" 
                                  DisplayMemberPath="DisplayName"/>
                </GroupBox>
                <GroupBox Header="聚合字段" Margin="0,10,0,5">
                    <DataGrid ItemsSource="{Binding Design.Aggregations}" 
                              AutoGenerateColumns="False" Height="100">
                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Field.DisplayName}" Header="字段"/>
                            <DataGridComboBoxColumn ItemsSource="{x:Static Member=local:AggregationType.Sum}" 
                                                    SelectedValueBinding="{Binding Type}" Header="聚合"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </GroupBox>
                <CheckBox Content="启用年+季度模式" 
                          IsChecked="{Binding Design.EnableYearQuarterMode}" 
                          Margin="0,10,0,5"/>
                <Button Content="导出 Excel" Command="{Binding ExportExcelCommand}" 
                        Margin="0,20,0,0" Height="40" FontSize="16"/>
            </StackPanel>
        </Border>
        <DataGrid Grid.Column="1" 
                  ItemsSource="{Binding PreviewData}" 
                  AutoGenerateColumns="True"
                  Margin="10"
                  CanUserAddRows="False"/>
    </Grid>
</Window>